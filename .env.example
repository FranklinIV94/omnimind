# Local Supermemory Environment Configuration
# Copy this file to .env and update values

# Database Configuration
DB_PASSWORD=YourSecurePostgresPassword123!
POSTGRES_DB=supermemory
POSTGRES_USER=albs_admin

# API Security
API_KEY=GenerateSecureRandomKeyHere_UseOpenSSL
JWT_SECRET=AnotherSecureRandomSecret_UseOpenSSL
JWT_EXPIRY_HOURS=24

# Vector Database
CHROMADB_PERSIST_DIR=/chroma/chroma
CHROMADB_TELEMETRY=FALSE

# Embedding Model
MODEL_NAME=all-MiniLM-L6-v2
MODEL_CACHE_DIR=/app/models

# Redis Cache
REDIS_PASSWORD=OptionalRedisPassword
REDIS_MAXMEMORY=512mb

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=pdf,docx,txt,md,jpg,png

# Watch Folder Settings
WATCH_FOLDER=/watch
PROCESSED_FOLDER=/processed
INBOX_FOLDER=/inbox

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=6

# Network Settings
API_PORT=8080
WEB_PORT=3000
CHROMADB_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379

# Performance Tuning (adjust for N150 hardware)
WORKER_COUNT=2
BATCH_SIZE=10
EMBEDDING_BATCH_SIZE=5
MAX_CONCURRENT_PROCESSES=2

# Email Integration (optional)
EMAIL_IMPORT_ENABLED=false
EMAIL_SERVER=imap.gmail.com
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FOLDER=INBOX

# External Services (optional)
OPENAI_API_KEY=sk-xxx  # For advanced features
EXA_API_KEY=xxx        # For web research
MICROSOFT_GRAPH_TOKEN=xxx  # For Office 365 integration

# Notes:
# 1. Generate secure passwords: openssl rand -base64 32
# 2. Adjust performance settings based on N150 specs
# 3. Enable email integration only if needed
# 4. Keep external API keys for optional advanced features